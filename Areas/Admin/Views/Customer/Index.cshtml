@model IEnumerable<CF_HOATUOIBASANH.Models.Customer>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                <div>
                    <h4 class="mb-3">Danh sách khách hàng</h4>
                    <p class="mb-0">
                        Cung cấp thông tin chi tiết về mỗi khách hàng như tên, địa chỉ, điện thoại, email, v.v.
                    </p>
                </div>
                <a asp-area="Admin" asp-controller="Customer" asp-action="Add" class="btn btn-primary add-list">
                    <i class="las la-plus mr-3"></i>Thêm khách hàng
                </a>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="table-responsive rounded mb-3">
                <table class="data-tables table mb-0 tbl-server-info dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                    <thead class="bg-white text-uppercase">
                        <tr class="ligth ligth-data" role="row">
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Họ và tên: activate to sort column ascending">Họ và tên</th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Địa chỉ: activate to sort column ascending" >Địa chỉ</th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Điện thoại: activate to sort column ascending" >Điện thoại</th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Email: activate to sort column ascending" >Email</th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Loại: activate to sort column ascending" >Loại</th>

                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Hành động: activate to sort column ascending" >Hành động</th>
                        </tr>
                    </thead>
                    <tbody class="ligth-body">
                        @foreach (var customer in Model)
                        {
                            <tr class="odd">
                                <td>@customer.FirstName @customer.LastName</td>
                                <td>@customer.Address</td>
                                <td>@customer.Phone</td>
                                <td>@customer.Email</td>
                                <td>@customer.Type</td>
                                <td>
                                    <div class="d-flex align-items-center list-action">
                                        <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title="Edit"
                                           asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.CustomerID">
                                            <i class="ri-pencil-line mr-0"></i>
                                        </a>
                                        <a class="badge bg-warning mr-2" data-toggle="tooltip" data-placement="top" title="Delete"
                                           asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.CustomerID">
                                            <i class="ri-delete-bin-line mr-0"></i>
                                        </a>
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Page end  -->
</div>
